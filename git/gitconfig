[alias]
  co = checkout
  st = status
  br = branch
  brs = branch -a
  brd = branch -D
  cob = checkout -b
  last = log -1 HEAD
  visual = !gitk
  a = add -A
  ci = commit
  cm = commit -m
  cp = cherry-pick
  ac = !git add -A && git commit -m
  px = push -u origin HEAD
  pl = pull
  curr = rev-parse --abbrev-ref HEAD
  hist = log --color --graph --pretty=format:'%C(magenta)%h%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  conflist = config --global --list
  authorlog = "!f() { git log --author=\"$1\"; }; f"

[core]
  autocrlf = input
  editor = vim

[credential]
  helper = store

[color]
  ui = true

[include]
  path = ~/.gitconfig.local

[user]
	email = av.palmeira@gmail.com
	name = Antonio Palmeira

[push]
	default = current

[pull]
	rebase = true

